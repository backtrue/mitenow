# mite.now Worker Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# GCP Configuration (Required)
# ============================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=asia-east1
# Base64 encoded service account JSON key
GCP_SERVICE_ACCOUNT_KEY=

# ============================================
# Security (Required)
# ============================================
# Secret key for signing internal tokens (min 32 chars)
API_SECRET_KEY=your-secret-key-min-32-characters

# Admin token for admin API access
ADMIN_TOKEN=your-admin-token

# ============================================
# Google OAuth (Required)
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# Stripe (Required for payments)
# ============================================
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_ID_PRO=price_xxx
STRIPE_PRICE_ID_QUOTA=price_xxx

# ============================================
# Monitoring (Optional)
# ============================================
# Sentry DSN for error tracking
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ============================================
# CORS (Optional)
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://mite.now,https://www.mite.now,http://localhost:3000

# ============================================
# Environment (Optional)
# ============================================
# 'production' or 'development'
ENVIRONMENT=production
